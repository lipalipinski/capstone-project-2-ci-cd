pipeline {
    agent {label 'ec2'}

    environment {
        TF_CLI_ARGS="-no-color"
    }

    stages {
        stage('tf db init') {
            steps {
                sh "terraform -chdir=tf-db init"
            }
        }
        stage('tf db apply') {
            steps {
                sh "terraform -chdir=tf-db destroy -auto-approve"
            }
        }
        stage('tf init') {
            steps {
                sh "terraform -chdir=tf-provision init"
            }
        }
        stage('tf destroy') {
            steps {
                sh "terraform -chdir=tf-provision destroy -auto-approve"
            }
        }
    }
}