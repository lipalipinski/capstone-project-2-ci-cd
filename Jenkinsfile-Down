pipeline {
    agent {label 'ec2'}

    environment {
        TF_CLI_ARGS="-no-color"
    }

    parameters {
        booleanParam(name: 'DESTROY_DB', defaultValue: false, description: 'Check out to permanently delete database resource')
    }

    stages {
        stage('tf db init') {
            steps {
                sh "terraform -chdir=tf-db init"
            }
        }
        stage('tf db destroy') {
            when {
                expression { return params.DESTROY_DB }
            }
            steps {
                sh "terraform -chdir=tf-db destroy -auto-approve"
            }
        }
        stage('tf init') {
            steps {
                sh "terraform -chdir=tf-provision init"
            }
        }
        stage('tf destroy') {
            steps {
                sh "terraform -chdir=tf-provision destroy -auto-approve"
            }
        }
    }
}