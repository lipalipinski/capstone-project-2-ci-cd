def app_server_ip
pipeline {
    agent {label 'ec2'}

    environment {
        TF_CLI_ARGS="-no-color"
    }


    stages {
        stage('tf init') {
            steps {
                sh "terraform -chdir=tf-provision init"
            }
        }
        stage('tf apply') {
            steps {
                sh "terraform -chdir=tf-provision apply -auto-approve"
            }
        }
        stage('test docker') {
            steps {
                script {
                app_server_ip = sh(
                    returnStdout: true, 
                    script: 'terraform -chdir=tf-provision output -raw AppServerIp'
                ).trim()
                sh "./tf-provision/files/check-server.sh ${app_server_ip}:80 ${app_server_ip}:8080"
                }
            }
        }
    }
}