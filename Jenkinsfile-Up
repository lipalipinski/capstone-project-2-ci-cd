pipeline {
    agent {label 'ec2'}

    environment {
        TF_CLI_ARGS="-no-color"
    }

    stages {
        stage('create server kp') {
            steps {
               sh 'ssh-keygen -f app-server-kp -t rsa -q -N ""' 
               sh 'll'
            }
        }
        stage('tf init') {
            steps {
                sh "terraform -chdir=tf-provision init"
            }
        }
        stage('tf apply') {
            steps {
                sh "terraform -chdir=tf-provision apply -auto-approve"
            }
        }
        stage('destroy server kp') {
            steps {
               sh 'rm -f app-server-kp app-server-kp.pub'
               sh 'll'
            }
        }
    }
}