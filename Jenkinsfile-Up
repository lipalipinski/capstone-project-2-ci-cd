pipeline {
    agent {label 'ec2'}

    environment {
        TF_CLI_ARGS="-no-color"
    }

    stages {
        stage('create server kp') {
            steps {
               echo "Creating app-server key pair..."
               sh 'ssh-keygen -f tf-provision/app-server-kp -t rsa -q -N ""' 
            }
        }
        stage('tf init') {
            steps {
                sh "terraform -chdir=tf-provision init"
            }
        }
        stage('tf apply') {
            steps {
                sh "terraform -chdir=tf-provision apply -auto-approve"
            }
        }
    }
    post {
        always{
            sh 'rm -fv tf-provision/app-server-kp*'
        }
    }
}